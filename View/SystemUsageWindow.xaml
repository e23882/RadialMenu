
<Window x:Class="RadialMenu.View.SystemUsageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadialMenu.View"
        xmlns:viewModel="clr-namespace:RadialMenu.ViewModel"
        xmlns:utility="clr-namespace:RadialMenu.Utility"
        mc:Ignorable="d"
        Title="SystemUsageWindow"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        FontFamily="pack://application:,,,/RadialMenu;component/Fonts/#LEDFont"
        SizeToContent="WidthAndHeight" Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.DataContext>
        <viewModel:SystemUsageWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <utility:UsageToBlocksConverter x:Key="UsageToBlocksConverter"/>
        <utility:UsageToStateConverter x:Key="UsageToStateConverter"/>
    </Window.Resources>
    <Border Background="#80000000" CornerRadius="5" Padding="10">
        <StackPanel>
            <!-- CPU Usage -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="CPU" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ItemsControl ItemsSource="{Binding CpuUsage, Converter={StaticResource UsageToBlocksConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="10" Height="20" Margin="2,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Gray"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.CpuUsage, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource UsageToStateConverter}}" Value="Low"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background" Value="Green"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.CpuUsage, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource UsageToStateConverter}}" Value="Medium"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background" Value="Orange"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.CpuUsage, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource UsageToStateConverter}}" Value="High"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background" Value="Red"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="{Binding CpuUsageText}" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- RAM Usage -->
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="RAM" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ItemsControl ItemsSource="{Binding RamUsage, Converter={StaticResource UsageToBlocksConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="10" Height="20" Margin="2,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Gray"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.RamUsage, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource UsageToStateConverter}}" Value="Low"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background" Value="Green"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.RamUsage, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource UsageToStateConverter}}" Value="Medium"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background" Value="Orange"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding}" Value="True"/>
                                                        <Condition Binding="{Binding DataContext.RamUsage, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource UsageToStateConverter}}" Value="High"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background" Value="Red"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="{Binding RamUsageText}" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
