<Window
    x:Class="RadialMenu.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:utility="clr-namespace:RadialMenu.Utility"
    Title="Settings"
    Width="400"
    Height="400">
    <Window.Resources>
        <utility:StringToBrushConverter x:Key="StringToBrushConverter" />
    </Window.Resources>
    <TabControl Margin="10">
        <TabItem Header="樣式">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    VerticalAlignment="Center"
                    IsChecked="{Binding MouseMenuEnable}">
                    啟用滑鼠選單
                </CheckBox>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="啟用按鍵" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding AllKeyCollection}"
                    SelectedItem="{Binding SelectedKey}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,10,10,0"
                    Text="按鈕文字:" />
                <Grid
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalContentAlignment="Center"
                        Text="{Binding Button1Text}" />

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalContentAlignment="Center"
                        Text="{Binding Button2Text}" />

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalContentAlignment="Center"
                        Text="{Binding Button3Text}" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalContentAlignment="Center"
                        Text="{Binding Button4Text}" />
                </Grid>

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,10,10,0"
                    Text="面板透明度:" />
                <Slider
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,10,0,0"
                    Maximum="1"
                    Minimum="0"
                    Value="{Binding PanelOpacity}" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="0,10,10,0"
                    Text="面板顏色:" />
                <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    Command="{Binding ChooseColorCommand}"
                    Content="Choose Color" />
                <Rectangle
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="50"
                    Height="20"
                    Margin="10,10,0,0"
                    Fill="{Binding PanelColor, Converter={StaticResource StringToBrushConverter}}" />

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="0,10,10,0"
                    Text="字體大小:" />
                <Slider
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    Maximum="30"
                    Minimum="8"
                    Value="{Binding FontSize}" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="2"
                    Margin="5,10,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding FontSize, StringFormat={}{0:F0}}" />

                <StackPanel
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="3"
                        Padding="15,5"
                        Background="Transparent"
                        Command="{Binding SaveSettingCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="SAVE" />
                    <Button
                        Margin="3"
                        Padding="5"
                        Background="Transparent"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="CANCEL" />
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="動作">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
