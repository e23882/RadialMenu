<Window
    x:Class="RadialMenu.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:utility="clr-namespace:RadialMenu.Utility"
    Title="Settings"
    Width="800"
    Height="400">
    <Window.Resources>
        <utility:StringToBrushConverter x:Key="StringToBrushConverter" />
        <utility:IntToBoolConverter x:Key="IntToBoolConverter" />
        <utility:DelayValueConverter x:Key="DelayValueConverter" />
        <utility:KeyDisplayConverter x:Key="KeyDisplayConverter" />
    </Window.Resources>
    <TabControl Margin="10">
        <TabItem Header="樣式">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    VerticalAlignment="Center"
                    IsChecked="{Binding MouseMenuEnable}">
                    啟用滑鼠選單
                </CheckBox>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="啟用按鍵" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding AllKeyCollection}"
                    SelectedItem="{Binding SelectedKey}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,10,10,0"
                    Text="按鈕文字:" />
                <Grid
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalContentAlignment="Center"
                        Text="{Binding Button1Text}" />

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalContentAlignment="Center"
                        Text="{Binding Button2Text}" />

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalContentAlignment="Center"
                        Text="{Binding Button3Text}" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalContentAlignment="Center"
                        Text="{Binding Button4Text}" />
                </Grid>

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,10,10,0"
                    Text="面板透明度:" />
                <Slider
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,10,0,0"
                    Maximum="1"
                    Minimum="0"
                    Value="{Binding PanelOpacity}" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="0,10,10,0"
                    Text="面板顏色:" />
                <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    Command="{Binding ChooseColorCommand}"
                    Content="Choose Color" />
                <Rectangle
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="50"
                    Height="20"
                    Margin="10,10,0,0"
                    Fill="{Binding PanelColor, Converter={StaticResource StringToBrushConverter}}" />

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="0,10,10,0"
                    Text="字體大小:" />
                <Slider
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    Maximum="30"
                    Minimum="8"
                    Value="{Binding FontSize}" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="2"
                    Margin="5,10,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding FontSize, StringFormat={}{0:F0}}" />

                <StackPanel
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="3"
                        Padding="15,5"
                        Background="Transparent"
                        Command="{Binding SaveSettingCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="SAVE" />
                    <Button
                        Margin="3"
                        Padding="5"
                        Background="Transparent"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="CANCEL" />
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="動作">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="選擇按鈕:" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <RadioButton
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            Content="按鈕 1"
                            GroupName="MacroButton"
                            IsChecked="{Binding SelectedButtonIndex, ConverterParameter=1, Converter={StaticResource IntToBoolConverter}}" />
                        <RadioButton
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5"
                            Content="按鈕 2"
                            GroupName="MacroButton"
                            IsChecked="{Binding SelectedButtonIndex, ConverterParameter=2, Converter={StaticResource IntToBoolConverter}}" />
                        <RadioButton
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            Content="按鈕 3"
                            GroupName="MacroButton"
                            IsChecked="{Binding SelectedButtonIndex, ConverterParameter=3, Converter={StaticResource IntToBoolConverter}}" />
                        <RadioButton
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="5"
                            Content="按鈕 4"
                            GroupName="MacroButton"
                            IsChecked="{Binding SelectedButtonIndex, ConverterParameter=4, Converter={StaticResource IntToBoolConverter}}" />
                    </Grid>
                </StackPanel>

                <ListView
                    Grid.Row="1"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    ItemsSource="{Binding CurrentMacroSteps}"
                    SelectedItem="{Binding SelectedMacroStep}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="130"
                                DisplayMemberBinding="{Binding ActionType}"
                                Header="動作類型" />
                            <GridViewColumn Width="60" Header="按鍵">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource KeyDisplayConverter}}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80" Header="延遲 (ms)">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DelayMilliseconds, Converter={StaticResource DelayValueConverter}}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="180" Header="Script">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Script}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="60" Header="操作">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            Padding="10,0"
                                            Background="Transparent"
                                            Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.RemoveMacroStepCommand}"
                                            CommandParameter="{Binding}"
                                            Content="移除" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel
                    Grid.Row="2"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="動作類型:" />
                    <ComboBox
                        Width="140"
                        ItemsSource="{Binding AllMacroActionTypes}"
                        SelectedItem="{Binding NewMacroActionType}" />

                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding NewMacroActionType}" Value="Delay">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding NewMacroActionType}" Value="WindowCommand">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock
                            Margin="10,0,5,0"
                            VerticalAlignment="Center"
                            Text="按鍵:" />
                        <ComboBox
                            Width="130"
                            ItemsSource="{Binding AllKeys}"
                            SelectedItem="{Binding NewMacroKey}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Grid.Row="3"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding NewMacroActionType}" Value="KeyPress">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding NewMacroActionType}" Value="KeyRelease">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding NewMacroActionType}" Value="MouseLeftPress">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding NewMacroActionType}" Value="MouseLeftRelease">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding NewMacroActionType}" Value="MouseRightPress">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding NewMacroActionType}" Value="MouseRightRelease">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding NewMacroActionType}" Value="WindowCommand">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="延遲 (ms):" />
                    <TextBox Width="100" Text="{Binding NewMacroDelayMilliseconds}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="4"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    Orientation="Vertical">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding NewMacroActionType}" Value="WindowCommand">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="Script:" />
                    <TextBox
                        Height="80"
                        AcceptsReturn="True"
                        Text="{Binding NewMacroScript}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </StackPanel>

                <StackPanel
                    Grid.Row="5"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="5,0"
                        Padding="10,5"
                        Background="Transparent"
                        Command="{Binding AddMacroStepCommand}"
                        Content="新增步驟" />
                    <Button
                        Margin="5,0"
                        Padding="10,5"
                        Background="Transparent"
                        Command="{Binding SaveMacroCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="儲存巨集" />
                </StackPanel>

            </Grid>
        </TabItem>
    </TabControl>
</Window>
