<Window
    x:Class="RadialMenu.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    Title="Settings"
    Width="400"
    Height="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" IsChecked="{Binding MouseMenuEnable}">
            啟用滑鼠選單
        </CheckBox>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Text="啟用按鍵" />
        <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding AllKeyCollection}" SelectedItem="{Binding SelectedKey}" />

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,10,10,0" Text="按鈕文字:" />
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,10,0,0">
            <TextBox Text="{Binding Button1Text}" Margin="0,0,0,5" />
            <TextBox Text="{Binding Button2Text}" Margin="0,0,0,5" />
            <TextBox Text="{Binding Button3Text}" Margin="0,0,0,5" />
            <TextBox Text="{Binding Button4Text}" />
        </StackPanel>

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,10,10,0" Text="面板透明度:" />
        <Slider Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="1" Value="{Binding PanelOpacity}" Margin="0,10,0,0" />

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,10,10,0" Text="面板顏色:" />
        <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding ColorOptions}" SelectedItem="{Binding PanelColor}" Margin="0,10,0,0" />

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="3" Padding="5" Background="Transparent" Command="{Binding SaveSettingCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="SAVE" />
            <Button Margin="3" Padding="5" Background="Transparent" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Content="CANCEL" />
        </StackPanel>
    </Grid>
</Window>
